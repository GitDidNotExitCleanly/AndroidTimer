package com.example.stopwatch_fragment;

import android.util.Log;
import android.view.View;
import android.view.View.OnClickListener;
import android.widget.ImageView;
import android.widget.TextView;

public class Menu_Item extends View implements OnClickListener {
	
	private ImageView icon;
	
	private TextView menu_description;
	
	public Menu_Item(ImageView icon,TextView textView) {
		super(null);
		this.icon = icon;
		this.menu_description = textView;
		
		this.setOnClickListener(this);
	}
	
	public ImageView getIcon() {
		return this.icon;
	}
	
	public TextView getTextView() {
		return this.menu_description;
	}

	@Override
	public void onClick(View v) {
		Log.d("WWWWWWWWWWWWWWWWWWWWWWWWWW", String.valueOf(icon.getId()));
		
	}
	
	
}
