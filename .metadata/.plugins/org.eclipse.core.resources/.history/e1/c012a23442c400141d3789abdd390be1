package com.example.stopwatch_fragment;

import android.util.Log;
import android.view.View;
import android.view.View.OnClickListener;
import android.widget.ImageView;
import android.widget.LinearLayout;
import android.widget.TextView;

public class Menu_Item {
	
	private LinearLayout container;
	
	private ImageView icon;
	
	private TextView menu_description;
	
	public Menu_Item(LinearLayout container,ImageView icon,TextView textView) {
		this.container = container;
		this.icon = icon;
		this.menu_description = textView;
	}

	public LinearLayout getContainer() {
		return this.container;
	}
	
	public ImageView getIcon() {
		return this.icon;
	}
	
	public TextView getTextView() {
		return this.menu_description;
	}
	

	public void setOnClickListener() {
		this.container.setOnClickListener(new OnClickListener() {
			@Override
			public void onClick(View v) {
				Log.d("WWWWWWWWWWWWWWWWWWWcon", v.getTag().toString());
				
			}
		});
		
		this.icon.setOnClickListener(new OnClickListener() {
			@Override
			public void onClick(View v) {
				Log.d("WWWWWWWWWWWWWWWWWWWicon", v.getTag().toString());
				
			}
		});
		
		this.menu_description.setOnClickListener(new OnClickListener() {
			@Override
			public void onClick(View v) {
				Log.d("WWWWWWWWWWWWWWWWWWWtext", v.getTag().toString());
				
			}
		});
	}

}
